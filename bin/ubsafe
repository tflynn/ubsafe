#!/usr/bin/env ruby

script_full_path = File.dirname(File.expand_path(__FILE__))

# If we're executing locally
if script_full_path.index(Dir.getwd)
  require File.expand_path(File.join(File.dirname(__FILE__),'..','lib','ubsafe'))
else
  require 'rubygems'
  gem 'ubsafe','0.1'
  require 'ubsafe'  
end

UBSafe::Commands::Backup.instance(ARGV).backup
